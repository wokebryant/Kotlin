<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:motionInterpolator="easeInOut"
        app:duration="200">


    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/title_fixed_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            app:layout_constraintLeft_toLeftOf="@id/title_layout"
            app:layout_constraintTop_toTopOf="@id/title_layout"
            app:layout_constraintBottom_toBottomOf="@id/title_layout">

<!--            <CustomAttribute-->
<!--                app:attributeName="text"-->
<!--                app:customStringValue="收起文本"/>-->

<!--            <CustomAttribute -->
<!--                app:attributeName="textColor"-->
<!--                app:customColorValue="#1c75ff"/>-->

        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/title_fixed_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintLeft_toLeftOf="@id/title_layout"
            app:layout_constraintTop_toTopOf="@id/title_layout"
            app:layout_constraintBottom_toBottomOf="@id/title_layout">

<!--            <CustomAttribute-->
<!--                app:attributeName="text"-->
<!--                app:customStringValue="展开文本"/>-->

<!--            <CustomAttribute -->
<!--                app:attributeName="textColor"-->
<!--                app:customColorValue="#d42f65"/>-->

        </Constraint>

    </ConstraintSet>

</MotionScene>