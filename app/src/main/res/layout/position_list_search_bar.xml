<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/position_icon_back_black"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:visibility="gone"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/preCityName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/back_icon"
            android:background="@drawable/position_shape_city_select"
            android:drawableRight="@drawable/position_icon_city_select_filterdown"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="7"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="全国"
            android:textColor="@color/C_B2"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/searchtitle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/preSearchCancel"
            android:layout_toRightOf="@+id/preCityName"
            android:background="@drawable/position_search_top_background">
            <!--搜索结果页面-->
            <TextView
                android:id="@+id/keywordTextViewTop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/clearIcon"
                android:gravity="center_vertical"
                android:background="@null"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/position_divider_dfe2e4"
                android:ellipsize="end"
                android:hint="搜索职位/公司"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="#282b2d"
                android:textSize="14sp"
                android:visibility="gone"
                />
            <!--搜索桥页-->
            <AutoCompleteTextView
                android:id="@+id/keywordEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/clearIcon"
                android:background="@null"
                android:drawableLeft="@drawable/position_divider_dfe2e4"
                android:drawablePadding="12dp"
                android:ellipsize="end"
                android:hint="搜索职位/公司"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="#282b2d"
                android:textColorHint="#aab0b7"
                android:textCursorDrawable="@drawable/bg_curse"
                android:textSize="14sp">

                <requestFocus />
            </AutoCompleteTextView>
            <RelativeLayout
                android:id="@+id/clearIcon"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/search_button"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/c_common_login_icon_clear"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:background="@drawable/position_search_shape_blue_corners"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:text="搜索"
                android:textColor="@color/white" />
        </RelativeLayout>
        <TextView
            android:id="@+id/preSearchCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingRight="17dp"
            android:paddingLeft="9dp"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>
