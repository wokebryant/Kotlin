<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_job_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        style="@style/style_text_bold_18"
        android:textColor="@color/C_B1"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="门诊护士字段超级长的情况展示"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_salary"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        style="@style/style_text_bold_16"
        android:textColor="@color/C_P1"
        tools:text="1-1.5万"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_company_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_job_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/style_text_normal_14"
            android:textColor="@color/C_B2"
            tools:text="北京沃美健康科技字段超长字段测试"/>

        <TextView
            android:id="@+id/tv_company_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/style_text_normal_14"
            android:textColor="@color/C_B2"
            tools:text="已上市"/>

        <TextView
            android:id="@+id/tv_company_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/style_text_normal_14"
            android:textColor="@color/C_B2"
            tools:text="1000-9999人"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_recommend_reason_tag"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="4dp"
        android:textSize="12sp"
        android:textColor="@color/C_P1"
        android:textStyle="bold"
        android:text="推荐理由"
        tools:background="@color/C_P7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_company_info"/>

    <TextView
        android:id="@+id/tv_recommend_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        android:textColor="@color/C_B2"
        tools:text="根据工作经验为你推荐"
        app:layout_constraintStart_toEndOf="@id/tv_recommend_reason_tag"
        app:layout_constraintTop_toTopOf="@id/tv_recommend_reason_tag"
        app:layout_constraintBottom_toBottomOf="@id/tv_recommend_reason_tag"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textSize="12sp"
        android:textColor="@color/C_B3"
        tools:text="朝阳区 建外"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_recommend_reason"
        app:layout_constraintBottom_toBottomOf="@id/tv_recommend_reason"/>
    
    <View
        android:id="@+id/v_divide"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="12dp"
        android:background="@color/C_B9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_recommend_reason_tag"/>

</androidx.constraintlayout.widget.ConstraintLayout>