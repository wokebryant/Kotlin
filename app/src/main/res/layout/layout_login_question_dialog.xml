<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fl_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/C_S2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="28dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_change_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            style="@style/style_text_bold_20"
            android:textColor="@color/C_B1"
            android:text="登录遇到问题？"/>

        <include
            android:id="@+id/in_change_bind"
            layout="@layout/layout_login_question_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="10dp"/>

        <include
            android:id="@+id/in_forget"
            layout="@layout/layout_login_question_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/C_B3"
                android:textSize="14sp"
                android:text="如需帮助，可"/>

            <TextView
                android:id="@+id/tv_call_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/C_P1"
                android:textSize="14sp"
                android:text="联系客服"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_close_dialog"/>

</FrameLayout>