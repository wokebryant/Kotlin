<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:background="@color/C_W1"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_resume_recommend_search"
        android:drawablePadding="4dp"
        style="@style/style_text_bold_18"
        android:textColor="@color/C_B1"
        tools:text="北京新知百略科技有限公司"/>

    <TextView
        android:id="@+id/tv_work_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/C_B3"
        tools:text="互联网  2015.03-2020.04(14年)" />

    <TextView
        android:id="@+id/tv_job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/style_text_bold_16"
        android:textColor="@color/C_B1"
        tools:text="自媒体·微信/知乎账户运营" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="7dp"
        android:textSize="15sp"
        android:textColor="@color/C_B2"
        tools:text="1.通过分析数据挖掘用户行为及反馈，简历有效的弊系统，包括但不限于识别及流程。等等有效效户及内容反作弊系统，包括但不限于识别及流
\n2.通过分析数据挖掘用户行为及反馈，简历有效的弊系统，包括但不限于识别及流程。"/>

    <com.zhaopin.common.widget.flowLayout.NoActionTagLy
        android:id="@+id/layout_skill_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusable="false"
        app:max_lines="1"
        app:max_select="-1"
        android:visibility="gone"
        tools:visibility="visible"/>

    <View
        android:id="@+id/view_spilt"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/C_B9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</LinearLayout>