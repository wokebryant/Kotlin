<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <com.example.kotlindemo.widget.ProgressbarView
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:progressBar_height = "10dp"
        app:progressBar_width = "300dp"
        app:progressBar_progressColor="#00ff00"
        app:progressBar_backgroundColor="#777777"
        app:progressBar_segmentColor="#ff0000"
        app:progressBar_intervalColor="#770077" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="delProgress"
        android:text="del"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addProgress"
        android:text="add"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addProgress2"
        android:text="add 2"
        />




</LinearLayout>
