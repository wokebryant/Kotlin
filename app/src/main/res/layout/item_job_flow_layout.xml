<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textSize="13sp"
        android:textColor="@color/C_B2"
        android:visibility="gone"
        tools:text="薪资"/>

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:paddingVertical="7dp"
        tools:text="测试"
        android:textColor="@color/color_common_tag_select_test"
        android:background="@drawable/bg_common_tag_item_color"
        android:textSize="@dimen/F_13" />

    <!-- 搜索结果页标签样式 -->
    <TextView
        android:id="@+id/tv_search_result_tag"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        tools:text="未查看"
        android:textColor="@color/color_search_result_tag"
        android:background="@drawable/bg_search_result_tag"
        android:textSize="@dimen/F_13"
        android:visibility="gone"/>

</LinearLayout>